# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8080

# Application URLs
SITE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8080


# Report Settings
MAX_EXPORT_ROWS=10000
REPORTS_CACHE_TIMEOUT=3600

# File Upload Settings (should already be there)
MAX_UPLOAD_SIZE=5242880
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xlsx,csv